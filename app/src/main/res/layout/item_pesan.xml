<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="?android:selectableItemBackground"
    android:id="@+id/relativeLayoutPesan"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btnReply"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/cvPesan"
        android:drawableRight="@drawable/ic_menu_send"
        android:layout_alignParentEnd="true"/>
    <android.support.v7.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:id="@+id/cvPesan"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="1dp"
        android:minHeight="15dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="7dp"
                android:text="nim"
                android:maxWidth="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/tvNamaPengirim"/>
            <TextView
                android:padding="7dp"
                android:maxWidth="200dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="22dp"
                android:layout_below="@id/tvNamaPengirim"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPesan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginEnd="-22dp"
                android:layout_marginTop="-10dp"
                android:layout_alignEnd="@id/tvPesan"
                android:layout_below="@id/tvPesan"
                android:id="@+id/tvWaktuKirim"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>